<div>
  <div>
    <!-- IMAGE GOES HERE -->
    <h1><%= @user.first_name %>'s Profile </h1>
    <h2>Statistics</h2>
    <h2>Total Challenges</h2>
    <h2>Completed Challenges</h2>
    <h2>Fail Challenges</h2>
  </div>
  <div>
    <h1>Current Challenges</h1>
    <%= erb :'partials/_current_challenges' %>
    <h1>Past Challenges</h1>
      <% @challenges.each do |challenge| %>
        <div class="challenge-box">
          <!-- Assumption that time stamps will work as shown
               YYYY/MM/DD-->
          <% if Time.current > challenge.end_time %>
            <% challenge.title %>
            <% challenge.wager %>
            <p><a href="/users/#{@user.id}/challenges/#{challenge.id}">Click for details</a></p>
            <% challenge.end_time - challenge.start_time %>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
