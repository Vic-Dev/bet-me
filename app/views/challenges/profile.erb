<div>
  <div>
    <h1><%= @challenge.title %></h1>
    <div>
      <p>Created by:</p>
      <h3>@challeng.users</h3>
      <!-- use profile photo img -->
    </div>
  </div>
  <div>
    <h1>Bet: <%= @challenge.wager %></h1>
    <h1>Time left: <%= Time.current - @challenge.end_time %></h1>
  </div>
  <div>
    <% if Time.current > @challenge.end_time && @is_creator %>
      <div>
        <h1>It's Judgment Day!</h1>
        <h1>Upload a photo for proof!</h1>
        <form id='proof_form' action="save_image" method="post" enctype="multipart/form-data">
          <input id='proof_image' type="file" name="file">
          <input type="submit" value="Upload image">
        </form>
      <% end %>
    <% elsif Time.current > @challenge.end_time && @is_voter %>

  </div>
    <h1>Description:</h1>
    <p><%= @challenge.description %></p>
