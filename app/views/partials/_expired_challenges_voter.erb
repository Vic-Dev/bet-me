<% if @expired_challenges_voter %>
  <% @expired_challenges_voter.each do |challenge| %>
    <% @challenge = Challenge.find(challenge.challenge_id) %>
      <div class="challenge-box-page-header">
        <div>
          Created by:<% challenge.user_id %><%= @challenge.user.first_name %> <%= @challenge.user.last_name[0] %></a>
        </div>
        <div class="wager-title">
          $<%= '%.2f' % @challenge.wager %>
        </div>
        <div class="title-challenge">
          <strong><%= @challenge.title %></strong>
        </div>
        <br>
        <button type="button" class="btn btn-default">
          <a href="/challenges/<%= @challenge.id %>">Click for details</a>
        </button>
        <div class="wager-title">
          Time Left: <%= @challenge.end_time - Time.current <= 0 ? 0 : Time.at(@challenge.end_time - Time.current).utc.strftime("%Hh %Mm %Ss") %>
        </div>
      </div>
    <% end %>
  <% end %>