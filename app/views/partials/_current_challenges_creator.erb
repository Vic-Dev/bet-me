<% @current_challenges_creator.each do |challenge| %>
  <div class="challenge-box page-header">
    <p class="text-left body-left challenge-left">
        Created by: <a href="/user/profile/<%= challenge.user_id %>"><%= challenge.user.first_name + ' ' + challenge.user.last_name %></a>
    </p>
    <p class="text-right challenge-right">Wager: $<%= '%.2f' % challenge.wager %></p>
    <h3 class="text-center"><strong><%= challenge.title %></strong></h3>
    <p class="text-left body-left challenge-left">
        <a href="/challenges/<%= challenge.id %>">Click for details</a></p>
    <p class="text-right challenge-right">Time Left: <%= challenge.end_time - Time.current <= 0 ? 0 : Time.at(challenge.end_time - Time.current).utc.strftime("%Hh %Mm %Ss") %></p>
  </div>
<% end %>
